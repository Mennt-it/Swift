@helper RenderStepSummaryDeliveryMethod() {
	string shippingMethod = GetString("Ecom:Order.ShippingMethod"),
	editStep = "CartV2.GotoStep1";

	if(!string.IsNullOrEmpty(shippingMethod))
	{
		<div class="list-group-item d-flex gap-3 align-items-baseline py-2 bg-light fs-7">

			<div class="flex-grow-1">
				<dl class="grid mb-0">
					<dt class="g-col-12 g-col-md-4 mb-lg-0 lh-base fw-normal">@Translate("Delivery")</dt>
					<dd class="g-col-12 g-col-md-8 mb-0">
						@shippingMethod
					</dd>
				</dl>
			</div>

			<button class="btn btn-small btn-link fs-8" type="submit" name="@editStep">
				<span class="text-uppercase">@Translate("Edit")</span>
			</button>

		</div>
	}
}
