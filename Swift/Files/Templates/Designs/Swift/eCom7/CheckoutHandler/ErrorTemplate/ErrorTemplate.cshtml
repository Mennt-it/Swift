@inherits Dynamicweb.Rendering.RazorTemplateBase<Dynamicweb.Rendering.RazorTemplateModel<Dynamicweb.Rendering.Template>>
@using System.IO
@Include("../../CartV2/Step/Helpers/Logo.cshtml")
@Include("../../CartV2/Step/Helpers/StepsBreadcrumbs.cshtml")
@Include("../../CartV2/Step/Helpers/StepSummary.cshtml")
@Include("../../CartV2/Step/Helpers/AddressDeliveryAnonymous.cshtml")
@Include("../../CartV2/Step/Helpers/StepsNavigation.cshtml")
@Include("../../CartV2/Step/Helpers/SummarySidebar.cshtml")
@Include("../../CartV2/Helpers/DeliveryAddressDisplayFormatted.cshtml")
@Include("../../CartV2/Helpers/DeliveryAddressEditFormatted.cshtml")
@Include("../../CartV2/Helpers/UserAddressDisplayFormatted.cshtml")
@Include("../Helpers/Errors.cshtml")
@{ 
	var themeRaw = Pageview.CurrentParagraph.Item["Theme"]?.ToString();
	string theme = !string.IsNullOrEmpty(themeRaw) ? " theme " + themeRaw.Replace(" ", "").Trim().ToLower() : "";
}

<div class="grid gap-0 h-100">
	<div class="cart g-col-12 g-col-lg-8 p-3 p-lg-4 pe-xl-5 ps-xl-6 ps-xxl-8 order-last order-lg-first@(theme)">
		<form name="ordersubmit" id="ordersubmit" method="post" autocomplete="off" style="max-width: 65rem; margin-left: auto;">
			@{ 
				@RenderLogo()

				@RenderStepsBreadcrumbs()

				@RenderStepSummary()

				@RenderErrors()

				@RenderStepsNavigation()
			}

			<input type="hidden" id="CurrentStep">
		</form>
	</div>

	@{ @RenderSummarySidebar() }

</div>

<script>
	const payButton = document.querySelector("#PayButton");
	if (payButton) {
		payButton.disabled = true;
	}
</script>
