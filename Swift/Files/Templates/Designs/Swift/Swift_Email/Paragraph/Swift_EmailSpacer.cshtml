@inherits Dynamicweb.Rendering.ViewModelTemplate<Dynamicweb.Frontend.ParagraphViewModel>

@{
	var blockId = Model.ID;
	var blockType = "spacer_block";
	var block = Model.Item;
	var height = block.GetValue("Height");
}


<table id="@blockId" class="@blockType" align="center" border="0" cellpadding="0" cellspacing="0" role="presentation" style="mso-table-lspace:0pt;mso-table-rspace:0pt;border:0;margin:0;outline:0;padding:0;color:inherit;width:100%;">
	<tbody>
		<tr style="border:0;margin:0;outline:0;padding:0;">
			<td style="mso-table-lspace:0pt;mso-table-rspace: 0pt;text-align:left;vertical-align:top;border:0;margin:0;outline:0;padding:0;" width="100%" height="@(height)">
				<div style="height:@(height)px;line-height:@(height)px;font-size:0px;"></div>
			</td>
		</tr>
	</tbody>
</table>
