@inherits Dynamicweb.Rendering.ViewModelTemplate<Dynamicweb.Frontend.ParagraphViewModel>

@{
	var blockId = Model.ID;
	var blockType = "spacer_block";
	var block = Model.Item;
	var height = block.GetValue("Height");
}


<table id="@blockId" class="@blockType" align="center" border="0" cellpadding="0" cellspacing="0" role="presentation" style="mso-table-lspace: 0pt; mso-table-rspace: 0pt; color: inherit; width: 100%;">
	<tbody>
		<tr>
			<td style="mso-table-lspace:0pt;mso-table-rspace: 0pt;text-align:left;vertical-align:top;padding:0px;border:0px;" width="100%" height="@(height)">
				<div style="height:@(height)px; line-height:@(height)px; font-size: 1px;"></div>
			</td>
		</tr>
	</tbody>
</table>
