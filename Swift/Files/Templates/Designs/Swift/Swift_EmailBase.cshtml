	<table border="0" cellpadding="0" cellspacing="0" role="presentation" style="mso-table-lspace:0pt;mso-table-rspace:0pt;@(bodyFontStyle)border:0;border-collapse:separate;border-spacing:0;margin:0;outline:0;padding:0" width="100%">
		<tbody>
