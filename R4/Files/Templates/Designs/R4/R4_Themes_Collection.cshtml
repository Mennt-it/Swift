@inherits Dynamicweb.Rendering.ViewModelTemplate<Dynamicweb.Frontend.PageViewModel>

@MasterPageFile("MasterClean.cshtml")
@Model.Placeholder("content", "content", "default:true;sort:1").Trim().Replace(" ", string.Empty);

@{ 
	string tmpPath = Dynamicweb.Context.Current.Server.MapPath($"/Files/Templates/Designs/R4/_parsed/R4_css/R4_theme_styles_{Model.Area.ID}.tmp");
	string cssPath = Dynamicweb.Context.Current.Server.MapPath($"/Files/Templates/Designs/R4/_parsed/R4_css/R4_theme_styles_{Model.Area.ID}.css");
	Dynamicweb.Core.Helpers.TextFileHelper.WriteTextFile(Dynamicweb.Core.Helpers.TextFileHelper.ReadTextFile(tmpPath), cssPath, false);
	System.IO.File.Delete(tmpPath);
}
