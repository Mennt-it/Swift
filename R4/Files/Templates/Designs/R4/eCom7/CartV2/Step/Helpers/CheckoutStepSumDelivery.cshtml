@helper RenderStepSumDelivery() {

	if (!string.IsNullOrEmpty(@GetString("Ecom:Order.ShippingMethod")))
	{
	<div class="list-group-item d-flex justify-content-between align-items-baseline rounded-0 py-2 bg-light">

		<div class="me-3 w-100">
			<dl class="row mb-0">
				<dt class="col-md-4 mb-lg-0 lh-base text-muted fw-normal">@Translate("Delivery method")</dt>
				<dd class="col-md-8 mb-0">
					@GetString("Ecom:Order.ShippingMethod")
				</dd>
			</dl>
		</div>

		<button class="btn btn-small btn-link text-muted text-decoration-underline text-uppercase fs-7 me-n3" type="submit" name="CartV2.GotoStep1">@Translate("Edit")</button>

	</div>
	}
}
