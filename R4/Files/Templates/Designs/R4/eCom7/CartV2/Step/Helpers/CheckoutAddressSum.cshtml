@helper RenderStepSumAddress() {

	<div class="row mt-3">
		<div class="col-md-12">
			<div class="list-group">
				<div class="list-group-item d-flex justify-content-between align-items-baseline rounded-0 py-3 bg-light">
					<div class="me-3 w-100">
						<dl class="row mb-0">
							<dt class="col-md-4 h6 fw-bold mb-lg-0 lh-base">Delivery address</dt>
							<dd class="col-md-8 mb-0">

								<span class="name">@GetString("Ecom:Order.Delivery.Name")</span>

								<span class="address">@GetString("Ecom:Order.Delivery.Address")</span>
								<span class="zip">@GetString("Ecom:Order.Delivery.Zip")</span>
								<span class="city">@GetString("Ecom:Order.Delivery.City")</span>
								<span class="email">@GetString("Ecom:Order.Delivery.Email")</span>
								<span class="phone">@GetString("Ecom:Order.Delivery.Phone")</span>
							</dd>
						</dl>
					</div>
					<small>
						<a href="/pages/e-commerce/checkout-1/" class="text-uppercase text-secondary">Edit</a>
					</small>
				</div>
			</div>
		</div>
	</div>
}
