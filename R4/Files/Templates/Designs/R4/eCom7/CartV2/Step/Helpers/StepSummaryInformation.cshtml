@helper RenderStepSummaryInformation() {
	string name = GetString("Ecom:Order.Delivery.Name"),
	company = GetString("Ecom:Order.Delivery.Company"),
	address = GetString("Ecom:Order.Delivery.Address"),
	zip = GetString("Ecom:Order.Delivery.Zip"),
	city = GetString("Ecom:Order.Delivery.City"),
	country = GetString("Ecom:Order.Delivery.Country"),
	email = GetString("Ecom:Order.Delivery.Email"),
	phone = GetString("Ecom:Order.Delivery.Phone"),
	editStep = "CartV2.GotoStep0";

	if (
		!string.IsNullOrEmpty(name) || 
		!string.IsNullOrEmpty(company) || 
		!string.IsNullOrEmpty(address) || 
		!string.IsNullOrEmpty(zip) || 
		!string.IsNullOrEmpty(city) || 
		!string.IsNullOrEmpty(country) || 
		!string.IsNullOrEmpty(email) || 
		!string.IsNullOrEmpty(phone)
	)
	{
		<div class="list-group-item d-flex justify-content-between align-items-baseline rounded-0 py-2 fs-7 bg-light">

			<div class="me-3 w-100">
				<dl class="row mb-0">
					<dt class="col-md-4 mb-lg-0 lh-base fs-7 fw-normal">@Translate("Information")</dt>
					<dd class="col-md-8 mb-0 text-muted">
						@if (!string.IsNullOrEmpty(name))
						{
							<span>@name</span>
						}
						@if (!string.IsNullOrEmpty(company))
						{
							<span>@company</span>
						}
						@if (!string.IsNullOrEmpty(address))
						{
							<span>@address</span>
						}
						@if (!string.IsNullOrEmpty(zip))
						{
							<span>@zip</span>
						}
						@if (!string.IsNullOrEmpty(city))
						{
							<span>@city</span>
						}
						@if (!string.IsNullOrEmpty(country))
						{
							<span>@country</span>
						}
						@if (!string.IsNullOrEmpty(email))
						{
							<span>@email</span>
						}
						@if (!string.IsNullOrEmpty(phone))
						{
							<span>@phone</span>
						}
					</dd>
				</dl>
			</div>

			<button class="btn btn-small btn-link text-muted text-decoration-underline text-uppercase fs-8 me-n3" type="submit" name="@editStep">@Translate("Edit")</button>

		</div>
	}

}
