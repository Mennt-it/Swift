@helper RenderCheckoutSteps(){
    string stepNumber = "";

	<nav aria-label="breadcrumb" class="mb-4 fs-7">
		<ol class="breadcrumb">
			@foreach (LoopItem step in GetLoop("StepButtons"))
			{
				if (step.GetString("Step.Name").ToLower() != "checkout")
				{
					if (GetLoop("StepButtons").Count > 2)
					{
						stepNumber = step.GetString("Step.Number");
					}
					
					if (step.GetBoolean("Step.Current"))
					{
						<li class="breadcrumb-item active" aria-current="page">@Translate(step.GetString("Step.Name"))</li>
					} 
					else {
						<li class="breadcrumb-item"><a href="#">@Translate(step.GetString("Step.Name"))</a></li>				
					}
				}
			}
		</ol>
	</nav>
}
