@helper RenderStepSummaryPayment() {
	string paymentMethod = GetString("Ecom:Order.PaymentMethod"),
	editStep = "CartV2.GotoStep2";

	if(!string.IsNullOrEmpty(paymentMethod))
	{
		<div class="list-group-item d-flex justify-content-between align-items-baseline rounded-0 py-2 bg-light fs-7">

			<div class="me-3 w-100">
				<dl class="row mb-0">
					<dt class="col-md-4 mb-lg-0 lh-base fw-normal">@Translate("Payment")</dt>
					<dd class="col-md-8 mb-0 text-muted">
						@paymentMethod
					</dd>
				</dl>
			</div>

			<button class="btn btn-small btn-link text-muted text-decoration-underline text-uppercase fs-8 me-n3" type="submit" name="@editStep">@Translate("Edit")</button>

		</div>
	}

}
