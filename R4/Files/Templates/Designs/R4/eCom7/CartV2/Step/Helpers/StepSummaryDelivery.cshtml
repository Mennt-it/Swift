@helper RenderStepSummaryDelivery() {
	string shippingMethod = GetString("Ecom:Order.ShippingMethod"),
	editStep = "CartV2.GotoStep1";

	if(!string.IsNullOrEmpty(shippingMethod))
	{
		<div class="list-group-item d-flex justify-content-between align-items-baseline rounded-0 py-2 bg-light fs-7">

			<div class="me-3 w-100">
				<dl class="row mb-0">
					<dt class="col-md-4 mb-lg-0 lh-base fw-normal">@Translate("Delivery")</dt>
					<dd class="col-md-8 mb-0 text-muted">
						@shippingMethod
					</dd>
				</dl>
			</div>

			<button class="btn btn-small btn-link me-n3 fs-8" type="submit" name="@editStep">
				<span class="text-muted text-uppercase">@Translate("Edit")</span>
			</button>

		</div>
	}
}
