@helper RenderCartHeader() {
	<header class="py-3 text-muted d-none d-lg-block">
		<div class="row">
			<div class="col-2">@Translate("Product")</div>
			<div class="col-10">
				<div class="row">
					<div class="col-2 offset-4 text-end">@Translate("Quantity")</div>
					<div class="col-3 offset-3 text-end">@Translate("Total")</div>
				</div>
			</div>
		</div>
	</header>
}
