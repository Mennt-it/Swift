@inherits Dynamicweb.Rendering.ViewModelTemplate<Dynamicweb.Frontend.PageViewModel>
@using System.Web


<!doctype html>
<html lang="@Pageview.Area.CultureInfo.TwoLetterISOLanguageName" class="h-100">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="ie=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="robots" content="noindex nofollow">
	<meta name="googlebot" content="noindex">
	<meta name="googlebot-news" content="nosnippet">

	<title>@Model.Title</title>

	<!-- R4 Styles -->
	<link href="~/Files/Templates/Designs/R4/Assets/css/r4.min.css" rel="stylesheet" type="text/css">

	<style>
		.brand {
			--r4-body-font: 'Inter';
			--r4-body-font-weight: normal;
			--r4-body-casing: none;
			--r4-body-line-height: initial;
			--r4-body-letter-spacing: initial;
			--r4-header-font: 'Inter';
			--r4-header-font-weight: bold;
			--r4-header-casing: uppercase;
			--r4-header-line-height: initial;
			--r4-header-letter-spacing: initial;
			--r4-display-font: 'Dancing Script', cursive;
			--r4-display-font-weight: bold;
			--r4-display-casing: none;
			--r4-display-line-height: initial;
			--r4-display-letter-spacing: initial;
		}

		.theme-light {
			--r4-forground-color: #333;
			--r4-background-color: #fff;
			--r4-border-color: #f7f7f7;
			--r4-button-primary-background-color: #333;
			--r4-button-primary-foreground-color: #fff;
			--r4-button-secondary-background-color: #333;
			--r4-button-secondary-foreground-color: #fff;
		}

		.theme-gray {
			--r4-forground-color: #333;
			--r4-background-color: #f2f2f2;
			--r4-border-color: #f7f7f7;
			--r4-button-primary-background-color: #333;
			--r4-button-primary-foreground-color: #fff;
			--r4-button-secondary-background-color: #333;
			--r4-button-secondary-foreground-color: #fff;
		}

		.theme-dark {
			--r4-forground-color: #fff;
			--r4-background-color: #333;
			--r4-border-color: #ccc;
			--r4-button-primary-background-color: #fff;
			--r4-button-primary-foreground-color: #333;
			--r4-button-secondary-background-color: #fff;
			--r4-button-secondary-foreground-color: #333;
		}

		.theme-black-friday {
			--r4-forground-color: #333;
			--r4-background-color: #ebeafb;
			--r4-border-color: #4f3fda;
			--r4-button-primary-background-color: #4f3fda;
			--r4-button-primary-foreground-color: #fff;
			--r4-button-secondary-background-color: #4f3fda;
			--r4-button-secondary-foreground-color: #fff;
		}

		.theme-easter {
			--r4-forground-color: #333;
			--r4-background-color: #fff7e5;
			--r4-border-color: #ffaa00;
			--r4-button-primary-background-color: #148d1e;
			--r4-button-primary-foreground-color: #fff;
			--r4-button-secondary-background-color: #ffaa00;
			--r4-button-secondary-foreground-color: #fff;
		}
	</style>

</head>

	<body class="d-flex flex-column min-vh-100 brand">
		<header class="page-header border-bottom position-sticky top-0 shadow d-none d-lg-block theme theme-light" id="page-header" style="z-index: 10">
			@if (@Model.Area.Item.GetString("HeaderDesktop") != null)
			{
				@RenderGrid(@Model.Area.Item.GetInt32("HeaderDesktop"))
			}
		</header>

		<header class="page-header border-bottom position-sticky top-0 shadow d-block d-lg-none theme theme-light" id="page-header" style="z-index: 10">
			@if (@Model.Area.Item.GetString("HeaderMobile") != null)
			{
				@RenderGrid(@Model.Area.Item.GetInt32("HeaderMobile"))
			}
		</header>

		<main id="page-content" class="overflow-hidden">
			<div id="content">
				@ContentPlaceholder()
			</div>
		</main>

		<footer class="page-footer d-none d-lg-block mt-auto py-5" id="page-footer">
			@if (@Model.Area.Item.GetString("FooterDesktop") != null)
			{
				@RenderGrid(@Model.Area.Item.GetInt32("FooterDesktop"))
			}
		</footer>
		
		<footer class="page-footer d-block d-lg-none mt-auto" id="page-footer">
			@if (@Model.Area.Item.GetString("FooterMobile") != null)
			{
				@RenderGrid(@Model.Area.Item.GetInt32("FooterMobile"))
			}
		</footer>
		
		<!-- R4 Scripts -->
		<script src="~/Files/Templates/Designs/R4/Assets/js/r4.js" type="text/javascript"></script>

	</body>

</html>
